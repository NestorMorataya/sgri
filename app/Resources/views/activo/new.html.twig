{% extends 'layout.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset('public/css/botones.css')}}">
{% endblock %}

{% block body %}

<div class="container" style="margin-top:30px;">
  <div class="row well">
   <div class="col-md-6">
       <div class="page-header">
            <h2>NUEVO ACTIVO</h2>
       </div>
    {{ form_start(form) }}
        <div class="form-group">
         {{ form_label(form.codigo)}}
         {{ form_widget(form.codigo, {'attr':{'class':'form-control'}}) }}
        </div>
        <div class="form-group">
         {{ form_label(form.nombre)}}
         {{ form_widget(form.nombre, {'attr':{'class':'form-control'}}) }}
       </div>
        <div class="form-group">
         {{ form_label(form.descripcion)}}
         {{ form_widget(form.descripcion, {'attr':{'class':'form-control'}}) }}
       </div>
         <div class="form-group">
         {{ form_label(form.unidadResponsable)}}
         {{ form_widget(form.unidadResponsable, {'attr':{'class':'form-control'}}) }}
       </div>
         <div class="form-group">
         {{ form_label(form.personaResponsable)}}
         {{ form_widget(form.personaResponsable, {'attr':{'class':'form-control'}}) }}
       </div>
         <div class="form-group">
         {{ form_label(form.ubicacion)}}
         {{ form_widget(form.ubicacion, {'attr':{'class':'form-control'}}) }}
       </div>
         <div class="form-group">
         {{ form_label(form.cantidad)}}
         {{ form_widget(form.cantidad, {'attr':{'class':'form-control'}}) }}
       </div>

       <br>
       <center>
        <button class="button">Guardar</button>
        </center>
    {{ form_end(form) }}
</div>
</div>

<br>
<center>
    <ul>
        <li>
            <a href="{{ path('activo_index') }}">Regresar</a>
        </li>
    </ul>
</center>
{% endblock %}
